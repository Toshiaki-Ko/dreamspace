<div class= "select_area">
<%= link_to "新規投稿", new_designer_registrant_path, 
  class: "btn btn-xlagrge btn-default" %>
<%= link_to "デザインーを待っている\n入り口", 
	find_designer_posts_path, class: "btn btn-xlagrge btn-primary" %><br>
</div>
<br>
<div class= "post_index">
<%= will_paginate %>
  <table class= "table table-striped table-bordered table-hover">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>得意分野</th>
      <th>地域</th>
      <th>デザインしてみたい部屋</th>
      <th>登録日時</th>

    </tr>
    <% @designer_registrants = DesignerRegistrant.all %>
    <% @designer_registrants.each do |d| %>
    <tr>
      <td width="70" height= "70"><%= d.id%></td>
      <td width="100"height= "70"><%= d.user.name %></td>
      <td width="70"height= "70"><%= d.specialty %></td>
      <td width="100"height= "70"><%= d.prefecture %></td>
      <td width="350"height= "70">
      <%= cut_off(d.demand, 50) %>
      <%= link_to "[詳しくはこちら]" , designer_registrant_path(:id => d.id) %>
      </td>
      <td valign="center" width="100"height= "70"><%= d.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <% end %>
  </table>
</div>
