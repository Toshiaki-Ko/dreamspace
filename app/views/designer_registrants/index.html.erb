<div class= "select_area">
<%= link_to "デザインーを待っている\n入り口", 
	find_designer_posts_path, class: "btn btn-xlagrge btn-primary" %>
<%= link_to "モデル部屋を待っている\n入り口", designer_registrants_path, 
	class: "btn btn-xlagrge btn-danger" %><br>
</div>
<br>
<%= link_to "新規投稿", new_designer_registrant_path, 
	class: "btn btn-xlagrge btn-default" %><br>
<br>
<div class= "post_index">
<%= will_paginate %>
  <table>
    <tr>
      <th bgcolor="#EE0000"><font color="#FFFFFF">デザイナー ID</font></th>
      <th bgcolor="#EE0000"><font color="#FFFFFF">名前</font></th>
      <th bgcolor="#EE0000"><font color="#FFFFFF">得意分野</font></th>
      <th bgcolor="#EE0000"><font color="#FFFFFF">地域</font></th>
      <th bgcolor="#EE0000"><font color="#FFFFFF">デザインしてみたい部屋</font></th>
      <th bgcolor="#EE0000"><font color="#FFFFFF">登録日時</font></th>

    </tr>
    <% @designer_registrants = DesignerRegistrant.all %>
    <% @designer_registrants.each do |d| %>
    <tr>
      <td bgcolor="#99CC00" valign="center" width="50" height= "70"><%= d.id%></td>
      <td bgcolor="#FFFFFF" valign="center" width="100"height= "70"><%= d.user.name %></td>
      <td bgcolor="#FFFFFF" valign="center" width="70"height= "70"><%= d.specialty %></td>
      <td bgcolor="#99CC00" valign="center" width="100"height= "70"><%= d.prefecture %></td>
      <td bgcolor="#FFFFFF" valign="center" width="350"height= "70">
      <%= cut_off(d.demand, 50) %>
      <%= link_to "[詳しくはこちら]" , designer_registrant_path(:id => d.id) %>
      </td>
      <td bgcolor="#99CC00" valign="center" width="100"height= "70"><%= d.created_at %></td>
    <% end %>
  </table>
</div>
